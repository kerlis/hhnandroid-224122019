<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.doapps.appdhn.activities.ChartsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout_sand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/sand"
            android:orientation="vertical">

        </LinearLayout>

        <ImageView
            android:id="@+id/image_view_tip_2"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:src="@mipmap/tip_02"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="-45dp"/>

        <ImageView
            android:id="@+id/image_view_tip_3"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:src="@mipmap/tip_03"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linear_layout_sea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/im_background_02"
            android:orientation="vertical">

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--android:background="@mipmap/im_background_03">-->

    </LinearLayout>

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:auto_cycle="true"
        custom:indicator_visibility="visible"
        custom:pager_animation="Accordion"
        custom:pager_animation_span="1100"
        />

    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        custom:selected_color="@color/sand"
        custom:selected_drawable="@mipmap/ic_bird"
        custom:selected_height="6dp"
        custom:selected_padding_left="5dp"
        custom:selected_padding_right="5dp"
        custom:selected_width="6dp"
        custom:shape="oval"
        custom:unselected_color="#55333333"
        custom:unselected_height="6dp"
        custom:unselected_padding_left="5dp"
        custom:unselected_padding_right="5dp"
        custom:unselected_width="6dp" />

    <ImageView
        android:id="@+id/image_view_tip_1"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@mipmap/tip_01"
        android:layout_gravity="center_horizontal"
        android:visibility="visible" />
<!--
    <ImageView
        android:id="@+id/image_view_tip_2"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@mipmap/tip_02"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:layout_marginTop="-20dp"/>
-->
    <ImageView
        android:id="@+id/image_view_tip_4"
        android:layout_width="180dp"
        android:layout_height="270dp"
        android:src="@mipmap/tip_04"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/image_view_tip_5"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:src="@mipmap/tip_05"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:gravity="center"
        android:layout_gravity="bottom|center" >

        <TextView
            android:id="@+id/text_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/lorem_ipsum_small"
            android:textColor="@color/gen_white"
            android:textSize="@dimen/text_size_tip"
            />

    </LinearLayout>

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:local="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/CustomActionBar" />
    <!--android:background="@color/gen_transparent"-->
</FrameLayout>